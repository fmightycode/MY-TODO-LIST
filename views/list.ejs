<%- include("header") %>
    <body>
        <div class="box" id="heading">
        <h1><%= listTitle %></h1>
        </div>
        <div class="box"> 
            <% addItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                <div class="item">   
                <input type="checkbox">
                 <p><%= item.name %></p>
                <input type="hidden" name="post" value="<%= listTitle %>">
                 <input type="hidden" name="delete" value="<%= item._id %>">
                 <i class="bx bxs-trash" onclick="this.closest('form').submit()"></i>
                </div>
                </form>
            <% }) %>
             <p id="progressText" class="progress in-progress start completed check">
               Progress: 0% completed
                </p>
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="New item" autocomplete="off" required>
               <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
        </div> 
<%- include("footer") %>